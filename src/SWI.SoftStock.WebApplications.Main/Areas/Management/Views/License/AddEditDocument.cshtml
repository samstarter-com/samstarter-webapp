<script type="text/html" id="AddDocument">
    <div class="col-md-12 nopadding">
        <div class="col-md-12 nopadding">
            <button type="button" class="btn btn-default btn-lg" data-bind="click: onRemoveDocumentClick" title="Remove document">
                <span class="glyphicon glyphicon-remove-sign"></span>
            </button>                            
        </div>
        <ol>
            <li>
                <label data-bind="attr: { for: 'hcLocation'+index }">Hard copy location</label>
                <textarea class="form-control valid" cols="20" data-val="true" data-val-maxlength="Hard copy location text cannot be longer than 1000 characters" data-val-maxlength-max="1000" data-bind="value: hcLocation, attr: { id: 'hcLocation'+index,  name: 'hcLocation'+index }" rows="2"></textarea>
                <span class="field-validation-valid" data-bind="attr: { 'data-valmsg-for': 'hcLocation'+index }" data-valmsg-replace="true"></span>
            </li>
            <li>
                <input type="file" data-bind="attr: { id: 'file'+index,  name: 'file'+index }, event: { change: function() { uploadDocument($element.files[0]) } }" class="form-control" />
            </li>
        </ol>
    </div>
    <div class="col-md-12 nopadding">
        <hr class="horizontalDivider"/>
    </div>
</script>

<script type="text/html" id="EditDocument">
    <div class="col-md-12 nopadding">
        <div class="col-md-12 nopadding">
            <button type="button" class="btn btn-default btn-lg" data-bind="click: onRemoveDocumentClick" title="Remove document">
                <span class="glyphicon glyphicon-remove-sign"></span>
            </button>                            
        </div>
        <ol>
            <li>
                <label data-bind="attr: { for: 'hcLocation' + index }">Hard copy location</label>
                <textarea class="form-control valid" cols="20" data-val="true" data-val-maxlength="Hard copy location text cannot be longer than 1000 characters" data-val-maxlength-max="1000" data-bind="value: hcLocation, attr: { id: 'hcLocationExist' + id(), name: 'hcLocationExist' + id() }" rows="2"></textarea>
                <span class="field-validation-valid" data-bind="attr: { 'data-valmsg-for': 'hcLocationExist' + id() }" data-valmsg-replace="true"></span>
                <input type="hidden"  data-bind="value: id, attr: { id: 'DocumentId' + id(), name: 'DocumentId' + id() }"></input>     
            </li>
            <li>
                <a data-bind="text: name, click: onDownloadClick"></a>
            </li>
        </ol>
    </div>
    <div class="col-md-12 nopadding">
        <hr class="horizontalDivider"/>
    </div>
</script>