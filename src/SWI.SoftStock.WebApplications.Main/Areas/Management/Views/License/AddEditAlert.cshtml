<script type="text/html" id="AlertUserDetail">
    <tr data-bind="click: onDetailRowClick, css: { info: isSelected() == true }">
        <td data-bind="text: userName"></td>
        <td data-bind="text: email"></td>
        <td data-bind="text: structureUnitName"></td>
    </tr>
</script>

<script type="text/html" id="AlertDetail">
    <div class="col-md-12 nopadding">
        <div class="col-md-12 nopadding">
            <button type="button" class="btn btn-default btn-lg" data-bind="click: onRemoveAlertClick" title="Remove alert">
                <span class="glyphicon glyphicon-remove-sign"></span>
            </button>
            <div data-bind="ifnot: isNew">
                <input type="hidden" data-bind="value: id, attr: { id: 'alertId' + index, name: 'alertId' + index }" />
            </div>

        </div>
        <ol>
            <li>
                <div class="col-md-12 nopadding">
                    <div class="col-md-6 nopadding">
                        <label data-bind="attr: { for: 'alertDate'+index }">Alert date</label>
                        <input data-val="true" data-val-date="The field alert date must be a date." data-val-required="Alert date is required" data-bind="attr: { id: 'alertDate' + index, name: 'alertDate' + index }, datepicker: alertDate, datepickerOptions: { changeMonth: true, changeYear: true, showButtonPanel: true, dateFormat: 'dd.mm.yy' }" type="text" value>
                      
                        <span class="field-validation-valid" data-bind="attr: { 'data-valmsg-for': 'alertDate'+index }" data-valmsg-replace="true"></span>      
                    </div>
                    <div class="col-md-6 nopadding">
                        <label data-bind="attr: { for: 'alertTime'+index }">Alert time</label>
                        <input class="time-picker" data-val="true" data-val-required="Alert time is required" data-bind="timeEntry: alertTime, timeEntryOptions: { show24Hours: true }, attr: { id: 'alertTime' + index, name: 'alertTime' + index }" type="text" value="">
                        <span class="field-validation-valid" data-bind="attr: { 'data-valmsg-for': 'alertTime'+index }" data-valmsg-replace="true"></span>      
                    </div>
                </div>
            </li>
            <li>
                <label data-bind="attr: { for: 'alertText'+index }">Alert text</label>
                <textarea class="form-control valid" cols="20" data-val="true" data-val-maxlength="Alert text cannot be longer than 1000 characters" data-val-maxlength-max="1000" data-bind="value: alertText, attr: { id: 'alertText' + index, name: 'alertText' + index }" rows="2"></textarea>
                <span class="field-validation-valid" data-bind="attr: { 'data-valmsg-for': 'alertText'+index }" data-valmsg-replace="true"></span>
            </li>
            <li>

                <div class="col-md-12 nopadding">
                    <label data-bind="attr: { for: 'alertUserAutocomplete'+index }">Alert subscribers</label>
                </div>
                <div class="col-md-4 nopadding">
                    <input data-bind="attr: { id: 'alertUserAutocomplete' + index }, autocomplete: { source: userAutocompleteSource, select: userAutocompleteSelect }" class="form-control"/>                            
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-default btn-lg" data-bind="click: onAddAlertUserClick">
                        <span class="glyphicon glyphicon-arrow-right"></span>
                    </button>
                    <button type="button" class="btn btn-default btn-lg" data-bind="click: onRemoveAlertUserClick">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                    </button>
                </div>
                <div class="col-md-5 nopadding" style="max-height: 200px; overflow: auto">
                    <table class="table table-striped table-hover" id="alertusers_table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Strucure unit</th>
                            </tr>
                        </thead>
                       <tbody data-bind="template: {
    name: 'AlertUserDetail',
    foreach: alertUsers
}">
                        </tbody>
                    </table>
<input type="hidden" data-bind="value: alertUsersId, attr: { id: 'alertUsers' + index, name: 'alertUsers' + index }" />
                 </div>
            </li>
        </ol>
    </div>
    <div class="col-md-12 nopadding">
        <hr class="horizontalDivider"/>
    </div>
</script>