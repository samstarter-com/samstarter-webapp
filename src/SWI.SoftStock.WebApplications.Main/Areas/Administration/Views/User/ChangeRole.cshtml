<script type="text/html" id="UserRole">
    <tr>     
        <td><input id="IsInRole" type="checkbox"  data-bind='checked: isInRole'></td>
        <td data-bind="text: roleName"></td>         
    </tr>
</script>

<hgroup class="title">
    <h1>Change user's roles</h1>
</hgroup>

<div class="col-md-4" id="cr_compFilter">
    <div id="jstree_demo_div" data-bind="jstree: { data: data, onTreeChange: onTreeChange }"></div>
</div>
<div id="changeRole">
    <div class="col-md-8" id="userroles">
        <table class="table table-striped table-hover" id="users_roles_table">
            <thead>
                <tr>
                    <th>In role</th>
                    <th>Role name</th>
                </tr>
            </thead>
            <tbody data-bind="template: {name: 'UserRole',foreach: rolesFiltered}"></tbody>
        </table>
    </div>
    <div class="col-md-12" id="userrolesform">
        <form data-bind="submit: changeUserRole">

            <div class="validation-summary-errors">
                <ul data-bind="foreach: errors">
                    <li>
                        <span data-bind="text: $data"> </span>
                    </li>
                </ul>
            </div>

            <fieldset>
                <input type="submit" value="Change" />
            </fieldset>
        </form>
    </div>
</div>
